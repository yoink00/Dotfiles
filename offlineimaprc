[general]
pythonfile = ~/.offlineimap.py
accounts = personal

[Account personal]
localrepository = personal-local
remoterepository = personal-remote
status_backend=sqlite
maxage=30
postsynchook = ~/Projects/scripts_etc/Mail/PostSyncHook.sh

[Repository personal-local]
type = Maildir
localfolders = ~/.mail
nametrans = lambda f: re.sub(r'^sent$', '[Google Mail]/Sent Mail', f)

[Repository personal-remote]
type = Gmail
realdelete = no
remoteusereval = get_user("personal-remote")
remotepasseval = get_passwd("personal-remote")
nametrans = lambda f: re.sub(r'^\[google mail\]\/sent mail$', 'sent', f.lower())
folderfilter = lambda foldername: foldername in [ 'INBOX', '[Google Mail]/Sent Mail' ]
# Necessary as of OfflineIMAP 6.5.4
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
